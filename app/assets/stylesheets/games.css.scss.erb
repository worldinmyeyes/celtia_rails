ul.tabs {
 margin: 0;
 padding: 0;
 float: left;
 list-style: none;
 height: 32px;
 border-bottom: 0px solid #996600;
 border-left: 1px solid #996600;
 width: 100%;
}

ul.tabs li {
 float: left;
 margin: 0;
 padding: 0;
 height: 31px; 
 line-height: 31px; 
 border: 1px solid #996600;
 border-left: none;
 margin-bottom: -1px; 
 overflow: hidden;
 position: relative;
 background: #DEB887;
}

ul.tabs li a {
 text-decoration: none;
 color: #000;
 display: block;
 font-size: 0.9em;
 padding: 0 20px;
 outline: none;
}
ul.tabs li a:hover {
 background: #ccc;
}
html ul.tabs li.active, html ul.tabs li.active a:hover  {
 background: #A58E6E;
 border-bottom: 1px solid #A58E6E; 
}

.tab_container {
 border: 1px solid #996600;
 border-top: none;
 overflow: hidden;
 clear: both;
 float: left; 
 background: #DEB887;
}

.tab_content {
 padding: 0px;
 font-size: 1.2em;
}

